@page
@model Bank.Pages.Dashboard.IndexDashboardModel
@{
    Layout = "_DashboardLayout";
}
<div class="container-fluid px-4">
    <h1 class="mt-4"></h1>
    <ol class="breadcrumb mb-4">
        @if (Model.UserRole.Contains("Admin"))
        {
            <h1 class="mt-4">Admin page</h1>
        }
        else
        {
            <h1 class="mt-4">Cashier page</h1>

        }

    </ol>
    <div class="row">
        @if (Model.UserRole == "Admin")
        {
            <div class="col-xl-6 mb-4">
                <div class="card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="sb-nav-link-icon">
                            <i class="fas fa-user-shield"></i>
                        </div>
                        <a class="nav-link stretched-link" href="/Users/User">Users</a>
                    </div>
                </div>
            </div>
        }
        <div class="col-xl-6 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="sb-nav-link-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <a class="nav-link stretched-link" href="/Customers/Customers">Customers</a>
                </div>
            </div>
        </div>
    </div>

</div>
