@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<header class="masthead">
    <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
        <div class="d-flex justify-content-center">
            <div class="text-center">
                <h1 class="mx-auto my-0 text-uppercase"
                    style="font-family: 'Courier New', Courier, monospace; font-size: 3rem; color: #e60000;">
                    Easy Bank
                </h1>
                <h2 class="mx-auto mt-2 mb-5"
                    style="font-family: 'Courier New', Courier, monospace; font-size: 1.5rem; color: #f2f2f2; font-weight: 300;">
                    The easiest way to manage your money
                </h2>
            </div>
        </div>
    </div>
</header>


<section class="contact-section bg-black">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5">
            <div class="col-md-4 mb-3 mb-md-0">
                <div class="card py-4 h-100" style="background-color: dimgrey">
                    <div class="card-body text-center">
                        <i class="fa-solid fa-users text-primary mb-2"></i>
                        <h4 class="text-uppercase m-0">Total customers</h4>
                        <hr class="my-4 mx-auto" />
                        <div class="small text-black-50">@Model.TotalCustomers</div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3 mb-md-0">
                <div class="card py-4 h-100" style="background-color: dimgrey">
                    <div class="card-body text-center">
                        <i class="fas fa-envelope text-primary mb-2"></i>
                        <h4 class="text-uppercase m-0">Total Accounts</h4>
                        <hr class="my-4 mx-auto"  />
                        <div class="small text-black-50">@Model.TotalAccounts</div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3 mb-md-0">
                <div class="card py-4 h-100" style="background-color: dimgrey">
                    <div class="card-body text-center">
                        <i class="fas fa-mobile-alt text-primary mb-2"></i>
                        <h4 class="text-uppercase m-0">Total sum in Bank</h4>
                        <hr class="my-4 mx-auto" />
                        <div class="small text-black-50">$@Model.TotalSum.ToString("N2")</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="social d-flex justify-content-center">
            <a class="mx-2" href="#!"><i class="fab fa-instagram"></i></a>
            <a class="mx-2" href="#!"><i class="fab fa-linkedin"></i></a>
            <a class="mx-2" href="#!"><i class="fab fa-github"></i></a>
        </div>
    </div>
</section>
